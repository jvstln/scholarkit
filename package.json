{
  "name": "scholarkit",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F @scholarkit/web dev",
    "dev:server": "turbo -F @scholarkit/server dev",
    "db:push": "turbo -F @scholarkit/server db:push",
    "db:studio": "turbo -F @scholarkit/server db:studio",
    "db:generate": "turbo -F @scholarkit/server db:generate",
    "db:migrate": "turbo -F @scholarkit/server db:migrate"
  },
  "dependencies": {
    "@orpc/client": "^1.5.0",
    "@orpc/server": "^1.5.0"
  },
  "devDependencies": {
    "turbo": "^2.5.4"
  },
  "packageManager": "bun@1.2.19"
}
